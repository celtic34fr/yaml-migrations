{
    "name": "celtic34fr/yaml-migrations",
    "description": "A library to facilitate migrations for YAML configuration files",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bob den Otter",
            "email": "bob@twokings.nl"
        },
        {
            "name": "Gilbert ARMENGAUD",
            "email": "gilbert.armengaud@gamil.com"
        }

    ],
    "require": {
        "bobdenotter/commando": "^1.0",
        "webimpress/safe-writer": "^2.1",
        "composer/semver": "^3.2",
        "symfony/yaml": "^6.0",
        "symfony/var-dumper": "^6.0",
        "symfony/finder": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "YamlMigrate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YamlMigrate\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^12.3",
        "phpunit/phpunit": "^9.5"
    },
    "bin": [
        "bin/yaml-migrate"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
